generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
  id       String   @id @default(cuid())
  email    String   @unique
  firstName     String
  lastName      String
  username String @unique
  createdAt DateTime @default(now())
  skills String[] @default([])
  Streak Int @default(0) //on this platform user can mail us with the question idea with its test cases and admin will have a dashboard from where he can add the question and test cases
  password String
  points    Int    @default(0) //user will get points based on the speed of execution and space complexity // eg 10 points if it gets executed in this much time 5 pts if it took this much space
  Submissions Submissions[] //user can arrange the questions and create a structured roadmap for themselves
}

model Question{
  id       String   @id @default(cuid())
  title    String
  description String
  config String //config main jo question hoga uss hisab se input bne honge aur woh input pass h honge function main call ho rha hoga aur woh UI pe nhi dikhaonga code main add krke bhej dunga 
  difficulty String
  minTime Int
  minSpace Int
  testCases String[]
  tags Tag[] @relation("Question Tags")
  examples String[]
  constraints String[] //add search on basis of topics and on basis of names of questions
  createdAt DateTime @default(now())
  Submissions Submissions[]
}

model Tag {
  id        String      @id @default(cuid())
  question Question[] @relation("Question Tags") 
  name      String
}

model Submissions{
  id       String   @id @default(cuid())
  // title    String //remove this //migrate
  createdAt DateTime @default(now())
  questionId String
  executedTime Int
  executedSpace Int
  Question Question @relation(fields: [questionId], references: [id])
  userId String
  User User @relation(fields: [userId], references: [id])
  status SubmissionStatus
}

enum SubmissionStatus {
  WRONG_ANSWER
  ACCEPTED
  TIME_LIMIT_EXCEEDED
  RUNTIME_ERROR
}